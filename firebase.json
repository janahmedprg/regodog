{
  "functions": [
    {
      "source": "ssr_function",
      "codebase": "ssr_function",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm run build:ssr",
        "mkdir -p \"$RESOURCE_DIR\"/dist && cp -R dist/client \"$RESOURCE_DIR\"/dist && cp -R dist/server \"$RESOURCE_DIR\"/dist",
        "npm --prefix \"$RESOURCE_DIR\" install",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": {
          "functionId": "ssrApp",
          "region": "us-central1"
        }
      }
    ]
  }
}
